{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <div class="relative h-screen overflow-hidden bg-gray-100">

        <!-- Colonne droite : image en fond -->
        <div class="hidden md:block absolute inset-0 w-full h-full z-0">
            <div class="w-[100%] h-full ml-auto bg-cover bg-center" style="background-image: url('https://picsum.photos/1920/1080.webp');"></div>
        </div>

        <!-- Colonne gauche -->
        <div class="relative z-10 w-full md:w-[40%] h-full flex flex-col justify-center items-center px-6 md:px-12 bg-white/50 backdrop-blur-md rounded-r-[16px] shadow-xl">
            <div class="max-w-md w-full space-y-6">
                <div class="flex justify-center">
                    <img src="https://api.dicebear.com/8.x/shapes/svg?seed={{ random() }}" alt="Logo" class="h-40">
                </div>
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}
